{
	"version": "1.0.0",
	"name": "sample.website.react",
	"description": "A simple webpack example.",
	"main": "bundle.js",
	"private": true,

	"scripts": {
		"dev": "webpack-dev-server --devtool eval --progress --colors --hot --content-base build",
		"build": "webpack -d --config webpack.config.js --colors",
		"watch": "webpack -d --config webpack.config.js --watch --colors",
		"prod": "SET NODE_ENV=production&&webpack -p --config webpack.config.js --colors"
	},

	"dependencies": {
		"react": "~15.4.2",
		"react-dom": "~15.4.2",
		"react-router": "~4.0.x",
		"react-addons-css-transition-group": "~15.4.2",
		"react-addons-update": "~15.4.2",
		"react-dnd": "~2.3.0",
		"react-dnd-html5-backend": "~2.3.0",
		"whatwg-fetch": "~2.0.3",
		"babel-polyfill": "~6.23.0"
	},

	"devDependencies": {
		"less": "~2.3.1",
		"less-loader": "~4.0.3",
		"babel-core": "~6.24.0",
		"babel-loader": "~6.4.1",
		"babel-preset-es2015": "~6.24.0",
		"babel-preset-react": "~6.23.0",
		"babel-eslint": "~7.2.1",
		"eslint": "~3.19.0",
		"eslint-config-airbnb": "~14.1.0",
		"eslint-plugin-import": "~2.2.0",
		"eslint-plugin-jsx-a11y": "~4.0.0",
		"eslint-plugin-react": "~6.10.0",
		"eslint-teamcity": "~1.3.1",
		"webpack": "~2.3.3",
		"webpack-dev-server": "~2.4.2",
		"html-webpack-plugin": "~2.28.0"
	}
}